<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="thirdpartysync">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure to sync selected customers data to third-party?</message>
                        <title translate="true">Third Party Sync</title>
                    </confirm>
                    <url path="custom/customer/datasync"/>
                    <type>thirdpartysync</type>
                    <label translate="true">Third Party Sync</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
</listing>